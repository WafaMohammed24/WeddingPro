   <style>
        /* أcolorلترويسات الجدول */
        th {
            background-color: White; /* لون الخلفية الفيروزي الداكن قليلاً */
            color: black; /* لون النص */
            font-weight: bold; /* جعل النص غامقًا */
            font-size: 14px; /* حجم النص */
            text-align: center; /* توسيط النص */
            padding: 10px; /* تحسين الفراغات */
        }
       
        /* تحسين مظهر الإطار الخارجي */
        .dataTables_wrapper .dataTables_filter {
            float: right;
            text-align: right;
            margin-bottom: 20px; /* إضافة مسافة بين حقل البحث والجدول */
        }

        .dataTables_wrapper .dataTables_length {
            float: left;
            text-align: left;
            margin-bottom: 20px; /* إضافة مسافة بين عرض الإدخالات والجدول */
        }
        /* إضافة إطار شامل */
        .dataTables_wrapper{
            border:2px ;
            border-radius:5px;
            padding:20px;
            background-color:white;
            
        }

        .dataTables_wrapper .dataTables_filter label,
        .dataTables_wrapper .dataTables_length label {
            font-weight: bold;
            color: grey; /* لون النص الفيروزي */
        }

        .dataTables_w!importantmportantapper .dataTables_info {
            float: left;
            margin-top: 0.75em;
        }

        .dataTables_wrapper .dataTables_paginate {
            float: right;
            text-align: right;
        }

        /* تحسين تصميم حقول الإدخال */
        .dataTables_wrapper .dataTables_filter input,
        .dataTables_wrapper .dataTables_length select {
            border: 1px solid #20B2AA; /* إطار فيروزي */
            border-radius: 4px; /* زوايا مستديرة */
            padding: 5px; /* فراغ داخلي */
        }

        /* تحسين مظهر إطار الحقول */
        .dataTables_wrapper .dataTables_filter input:focus,
        .dataTables_wrapper .dataTables_length select:focus {
            outline: none; /* إزالة الإطار الخارجي الافتراضي */
            border-color: #007B7F; /* لون إطار أغمق عند التحديد */
        }
        .active-tab {
          background-color:  rgba(211, 211, 211, 0.5);
          color: white !mportant; /* لون النص الأبيض */
                    }
       
       .top-bar{
          background-color:white;
          height:45px;
          }
          .nav-link i{
              margin-right:30px;
          }
           .nav-link {
              display:flex;
              align-items:center;
          }
</style>
