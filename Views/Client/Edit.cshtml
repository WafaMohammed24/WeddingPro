
@model Client

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index"> Dashboard </a>
        </li>
        <li class="breadcrumb-item ">  <a asp-controller="Client" asp-action="Index"> Client </a> </li>
        <li class="breadcrumb-item active">  Edit </li>
    </ol>

    @if (TempData.ContainsKey("msg"))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert-danger" asp-validation-summary="All"></div>
  
    <div class="card">
        <div class="card-header">
            <h4> Edit Client </h4>
        </div>
        <div class="card-body">
<form method="post" asp-action="Edit" class="row"  enctype="multipart/form-data">
  
     <div class="form-group  col-md-6">
       <div class="row">
    <span class="alert-danger" asp-validation-for="ClientId"></span>
    <input type="hidden" asp-for="ClientId" class="form-control" />
    
    <div class="form-group  col-md-6">
    <label asp-for="FullName" class="form-label"></label><br />
    <span class="alert-danger" asp-validation-for="FullName"></span>
    <input asp-for="FullName" class="form-control"/>
    </div>
    <br />

    <div class="form-group  col-md-6">
    <label asp-for="PhoneNumber"></label><br />
    <span class="alert-danger" asp-validation-for="PhoneNumber"></span>
    <input asp-for="PhoneNumber" class="form-control"/>
    </div>
    <br />

    <div class="form-group  col-md-6">
    <label asp-for="Address"></label><br />
    <span class="alert-danger" asp-validation-for="Address"></span>
    <input asp-for="Address" class="form-control"/>
    </div>
    <br /> 

    <div class="form-group  col-md-6">
    <label asp-for="Email"></label><br />
    <span class="alert-danger" asp-validation-for="Email"></span>
    <input asp-for="Email"class="form-control" />
    </div>
    <br />
    
    <div class="form-group  col-md-6">
    <label asp-for="PasswordHash"></label><br />
    <span class="alert-danger" asp-validation-for="PasswordHash"></span>
    <input asp-for="PasswordHash"class="form-control" />
    </div>
     <br />
     </div>
   </div>

   <div  class="form-group">
    <button type="submit" class="btn btn-primary" >Edit </button>
    <a asp-action="Index" class="btn btn-primary"> Back</a>
    </div>
</form>
</div>
</div>
</div>