@using Microsoft.EntityFrameworkCore;
@model IEnumerable<Client>


@if(Model is not null)
{
   <div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index"> Dashboard </a>
        </li>
        <li class="breadcrumb-item active">   Client </li>
    </ol>
        @if (TempData.ContainsKey("msg"))
        {
           
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["msg"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }   

        <div class="card">
            <div class="card-header">
                <div class="row">

                    <span class="col-sm-10 "> <h4>Client</h4> </span>

                    <a asp-action="Create" class="btn btn-primary col-sm-2 float-end">Create new </a>
                </div>
            </div>


            <div class="card-body my-n2">
                <table id="dataTable" class="table table-striped table-hover table-border ">
                    <thead>
                        <div class="alert-danger" asp-validation-summary="All"></div>
                        <tr>

                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Address </th>
                            <th>Email </th>
                            <th>PasswordHash </th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><a asp-action="Details" asp-route-id="@item.ClientId">@item.ClientId</a></td>

                                <td>@item.FullName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.PasswordHash</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm dropdown-toggle more-vertical" type="button" id="dr1" data-bs-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                            <span class="text-muted sr-only">Action</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLinkaria-labelledby=" dr1">
                                            <a class="dropdown-item" asp-route-id="@item.ClientId" asp-action="Edit" class="btn btn-primary">Edit</a>
                                            <a class="dropdown-item" asp-route-id="@item.ClientId" asp-action="Delete" class="btn btn-danger">Remove</a> 


                                        </div>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 
}
else{
    <div class="alert alert-info">No Data Found</div>
}

