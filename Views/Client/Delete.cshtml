@model Client

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index"> Dashboard </a>
        </li>
        <li class="breadcrumb-item ">  <a asp-controller="Client" asp-action="Index">Client </a> </li>
        <li class="breadcrumb-item active">  Delete </li>
    </ol>

    @if (TempData.ContainsKey("msg"))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert-danger" asp-validation-summary="All"></div>
    <h6 class="alert alert-danger">Are You Certain About Deleting this Data Permanently ? </h6>
    <div class="card">
        <div class="card-header">
            <h4> Delete Client </h4>
        </div>
        <div class="card-body">
<form method="post" asp-action="Delete" class="row"  enctype="multipart/form-data">
    
    <div class="form-group  col-md-6">
       <div class="row">

      <div class="form-group  col-md-6"> 
    <label asp-for="ClientId"></label><br />
    <span class="alert-danger" asp-validation-for="ClientId"></span>
    <input  readonly asp-for="ClientId" class="form-control"/>
     </div>
     <br />

    <div class="form-group  col-md-6"> 
    <label asp-for="FullName"></label><br />
    <span class="alert-danger"  asp-validation-for="FullName"></span>
    <input readonly asp-for="FullName" class="form-control"/>
     </div>
     <br />

    <div class="form-group  col-md-6"> 
    <label asp-for="PhoneNumber"></label><br />
    <span class="alert-danger" asp-validation-for="PhoneNumber"></span>
    <input readonly asp-for="PhoneNumber" class="form-control"/>
    </div>
    <br />

    <div class="form-group  col-md-6"> 
    <label asp-for="Address"></label><br />
    <span class="alert-danger" asp-validation-for="Address"></span>
    <input readonly asp-for="Address" class="form-control"/>
     </div>
     <br /> 
    
    <div class="form-group  col-md-6"> 
    <label asp-for="Email"></label><br />
    <span class="alert-danger" asp-validation-for="Email"></span>
    <input readonly asp-for="Email" class="form-control"/>
     </div>
    <br />
        <div class="form-group  col-md-6"> 
    <label asp-for="PasswordHash"></label><br />
    <span class="alert-danger" asp-validation-for="PasswordHash"></span>
    <input readonly asp-for="PasswordHash" class="form-control"/>
     </div>
    <br />
    <br />
            </div>
</div>
 <div  class="form-group">
    <button type="submit" class="btn btn-primary">Delete </button>
    <a asp-action="Index" class="btn btn-primary"> Back</a>
    </div>
</form>
</div>
</div>
</div>